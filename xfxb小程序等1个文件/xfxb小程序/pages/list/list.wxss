/* pages/list/list.wxss */
scroll-view{position: absolute;top: 0;left: 0;height: 100%}
 .list-item{margin-bottom: 20rpx;padding-top: 40rpx;padding: 0 20rpx}
 .list-item .name-text{font-size: 18px;}
 .list-item .more-btn{float: right;}
 .list-item .title{font-size: 16px;color: #000;padding: 0 40rpx;line-height: 40px}
 .list-item .more-btn image{width: 7.5px;height: 15px;float: right;margin-top: 12.5px;margin-left: 8px}
 .list-item .content{display: flex;justify-content: space-between;flex-wrap: wrap}
 .list-item .content .item{margin-bottom: 10px}
 .list-item .content .item .img-box{width: 318rpx;height: 160rpx;overflow: hidden;border: 2px solid #b2b2b2}
  .list-item .content .item .img-box image{width: 318rpx;height: 160rpx;}
 .list-item .content .item text{display:block;width:100%;text-align: center;font-size: 16px;line-height: 75rpx;}